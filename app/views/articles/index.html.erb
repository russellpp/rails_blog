

<div class="flex flex-col">
    <h1 class="font-mono text-5xl">Articles List</h1>   


    <table class="border-spacing-2 mt-10">

        <thead class="text-gray font-bold bg-gray-500">
            <tr>
                <th class="w-20 min-w-20">ID</th>
                <th class="text-left pl-5">Title</th>
                <th class="text-left pl-5">Content</th>
                <th class="border-black"></th>
                <th class="border-black"></th>
            </tr>
        </thead>

        <tbody class="">
            <% @articles.each do |article| %>
            <tr class="even:bg-gray-100 odd:bg-zinc-50">
                <td class="p-3 text-center text-gray-600 font-bold"><%= article.id %></td>
                <td class="p-3 capitalize hover:text-blue-400"><%= link_to article.name, article_path(article) %></td>
                <td class="p-3"><%= article.body %></td>
                <td class="p-3"> <%= link_to "Edit", edit_article_path(article), class: "hover:text-blue-600 hover:underline"  %> </td>
                <td class="p-3"> <%= button_to "Delete", article_path(article), method: :delete, class: "hover:text-red-500 hover:underline" %> </td>
            </tr>
            <% end %>
        </tbody>

    </table>

    <span class="mt-10 ml-5 text-xl font-bold hover:text-purple-600"><%= link_to "Create New Article", new_article_path %></span>

</div>
