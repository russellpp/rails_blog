<div class="flex flex-col">

    <%= render @article %>

    <div class="flex flex-row text-gray-400">
            <p class="mr-3"> <%= link_to "Edit", edit_article_path(@article), class: "hover:text-blue-500 hover:underline" %> </p>
            <span>|</span>
            <p class="ml-3"> <%= button_to "Delete", article_path(@article), method: :delete, class: "hover:text-purple-400 hover:underline" %> </p>
    </div>

</div>